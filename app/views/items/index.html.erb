<h1>Liste des Articles</h1>
<br>
<section class="collection">
    <div class="container">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-sm-6 col-md-4 col-lg-3 mb-3 p-2">
              <% if item.image.attached? %>
                <div class=container_image_product>
                  <%= link_to item do %>
                    <%= image_tag item.image, alt: 'image', class: "image_product img-fluid" %>
                  <%end%>
                </div>
              <% elsif item.image_url.present? %>
                <div class="container_image_product">
                  <%= image_tag item.image_url, alt: 'image', class: "image_product img-fluid" %>
                </div>
              <% end %>
            <h2><%= item.title %></h2>
            <p><%= item.description %></p>
            <p><%= number_to_currency(item.price, unit: "â‚¬") %></p>
            <% if user_signed_in? %>
              <%= button_to "Ajouter au panier", item_cart_items_path(item.id), method: :post, class: "btn btn_primary" %>
            <% end %>
            <br>
          </div>
        <% end %>
    </div>
</section>
